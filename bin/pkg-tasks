#!/usr/bin/env node

const dotEvent = require("dot-event").default
const dotStore = require("dot-store").default
const cyclops = require("cyclops").default
const pkg = require("../dist/pkg").default

const events = dotEvent()
const store = dotStore(events)

cyclops({ events, store })

events
  .cyclops({
    argv: process.argv.slice(2),
    composer: pkg,
    path: process.cwd(),
    task: "pkg-tasks",
  })
  .catch(function(e) {
    console.error(e)
    process.exit(1)
  })
